{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,              // ✅ emit .d.ts files
    "declarationMap": true,
    "outDir": "dist",                 // ✅ output types to dist
    "rootDir": "src",                 // ✅ source root
    "types": ["node", "react"]
  },
  "include": ["src/**/*"]
}
