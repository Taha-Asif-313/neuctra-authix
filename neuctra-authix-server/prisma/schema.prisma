// ---------- Datasource ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- Models ----------
model AdminUser {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  apiKey        String?   @unique
  isVerified    Boolean   @default(false)
  otp           String?
  otpExpiry     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  
  // Extra user data
  phone         String?
  address       String?
  avatarUrl     String?
  isActive      Boolean   @default(true)

  // Subscription fields
  subscriptionPackage   String   @default("free") // free | basic | pro
  subscriptionStartDate DateTime?                 // when package starts
  subscriptionEndDate   DateTime?                 // when package ends
  isPackageValid        Boolean  @default(false)  // true = active subscription

  // Relations
  apps          App[]
  users         User[]
}

model App {
  id              String   @id @default(cuid()) // crypto-generated ID
  applicationName String
  category        String
  description     String
  platform        String
  appSecret       String   @default(cuid())     // ðŸ‘ˆ unique secret for each app
  isActive        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relation: each App belongs to one Admin
  adminId   String
  admin   AdminUser @relation(fields: [adminId], references: [id])

  // Relation: one App can have many Users
  users     User[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String
  password  String
  token     String
  isVerified Boolean   @default(false)
  otp        String?
  otpExpiry  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  phone     String?
  address   String?
  avatarUrl String?
  isActive  Boolean  @default(true)
  role      String   @default("user")

  appId     String
  app       App       @relation(fields: [appId], references: [id])

  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id])

  data      Json?    

  @@unique([email, appId])
}


