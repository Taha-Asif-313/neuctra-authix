// ---------- Datasource ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- Models ----------
model AdminUser {
  id        String   @id           // ðŸ‘ˆ crypto-generated ID
  name      String
  email     String   @unique
  password  String
  apiKey    String?   @unique        // ðŸ‘ˆ crypto-generated API key
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  
  // Extra user data
  phone     String?
  address   String?
  avatarUrl String?
  isActive  Boolean  @default(true)

  // Relations
  apps      App[]
  users     User[]
}

model App {
  id              String   @id @default(cuid()) // crypto-generated ID
  applicationName String
  category        String
  description     String
  platform        String
  appSecret       String   @default(cuid())     // ðŸ‘ˆ unique secret for each app
  isActive        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relation: each App belongs to one Admin
  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id])

  // Relation: one App can have many Users
  users     User[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String
  password  String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  phone     String?
  address   String?
  avatarUrl String?
  isActive  Boolean  @default(true)
  role      String   @default("user")

  appId     String
  app       App       @relation(fields: [appId], references: [id])

  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id])

  data      Json?    

  @@unique([email, appId])
}


